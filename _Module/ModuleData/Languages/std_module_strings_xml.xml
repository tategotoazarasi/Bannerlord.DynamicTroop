<?xml version="1.0" encoding="utf-8"?>
<base type="string">
    <tags>
        <tag language="English"/>
    </tags>
    <strings>
        <string id="mod_name" text="Dynamic Troop Equipment System"/>
        <string id="settings" text="Settings"/>
        <string id="debug_mode" text="Debug mode"/>
        <string id="debug_mode_description" text="Enables detailed debug logs for troubleshooting."/>
        <string id="drop_rate" text="Drop Rate"/>
        <string id="drop_rate_description" text="Adjusts the drop rate multiplier for looted equipment."/>
        <string id="difficulty" text="Difficulty"/>
        <string id="difficulty_description" text="Adjusts the difficulty multiplier for equipment assignment."/>
        <string id="randomize_ai_equipment" text="Randomize non-hero-led party"/>
        <string id="randomize_ai_equipment_description"
                text="If enabled, agents whose parties are not processed by the armory system may receive randomized equipment."/>
        <string id="use_vanilla_looting_system" text="Use vanilla looting system"/>
        <string id="use_vanilla_looting_system_description"
                text="Use Bannerlord's vanilla loot calculation instead of the armory-based loot."/>
        <string id="randomize_starting_equipment" text="Randomize recruit starting equipment"/>
        <string id="randomize_starting_equipment_description"
                text="If enabled, recruits may receive randomized starting equipment when they are recruited."/>
        <string id="remove_civilian_equipments" text="Remove civilian equipments in random"/>
        <string id="remove_civilian_equipments_description"
                text="If enabled, civilian equipment will be excluded from random equipment selection."/>
        <string id="loyal_equipments" text="Loyal Equipments"/>
        <string id="loyal_equipments_desc"
                text="ON (default): Soldiers will prioritize their vanilla equipments and the closest equipment to their vanilla equipments, up to +2 tier of what they had before. OFF: Soldiers will take the best gear possible, following the +2 tier rule."/>
        <string id="emergency_loadout" text="Emergency Loadout"/>
        <string id="emergency_loadout_desc"
                text="ON (default): If the soldiers are going to be missing a weapon/armor at the beginning of the battle, they will have it from a t1 unit of their culture."/>
        <string id="underequipped" text="Underequipped"/>
        <string id="underequipped_desc"
                text="ON (default): If soldiers have a worse overall gear than what they had by default, they will lose morale."/>
        <string id="commanders_greed" text="Commander's Greed"/>
        <string id="commanders_greed_desc"
                text="OFF (default): the Player can't take stuff from the troop equipment pool."/>
        <string id="scrap_cap_per_category" text="Scrap cap per category"/>
        <string id="scrap_cap_per_category_desc"
                text="Only active when Commander's Greed is OFF. Every 3 days, if any item category in the troop stash exceeds this cap, the lowest-value items are deleted until the category drops to (cap - 1)."/>
        <string id="assign_extra_equipments" text="Assign Extra Equipments"/>
        <string id="assign_extra_equipments_description"
                text="If enabled, leftover equipment will be distributed to fill empty slots when possible."/>
        <string id="log_level" text="Log Level"/>
        <string id="log_level_description" text="0=Debug, 1=Info, 2=Warn, 3=Error, 4=Fatal, 5=All"/>

        <string id="armory_view_option" text="View Army Armory"/>
        <string id="armory_manage_option" text="Manage Armory"/>
        <string id="sell_for_throwing" text="Trade Excess Equipment for Throwing Weapons"/>
        <string id="sell_for_throwing_text"
                text="Sold excess equipment worth {VALUE} and obtained {COUNT} throwing weapons"/>
        <string id="loot_added_message" text="looted {ITEM_COUNT} items from enemy"/>
        <string id="items_recover_from_fallen_message" text="recover {ITEM_COUNT} from your fallen soldiers"/>
        <string id="return_to_town" text="Return to Town Menu"/>

        <string id="setting_easy" text="Easy"/>
        <string id="setting_normal" text="Normal"/>
        <string id="setting_hard" text="Hard"/>
        <string id="setting_very_hard" text="Very Hard"/>

        <string id="debug_clear_invalid_items" text="DEBUG: Clear invalid items"/>
        <string id="debug_remove_player_crafted_items" text="DEBUG: Remove player crafted items"/>
        <string id="debug_rebuild_armory" text="DEBUG: Rebuild player armory"/>
        <string id="debug_export_armory" text="DEBUG: Export player armory"/>
        <string id="debug_import_armory" text="DEBUG: Import player armory"/>

        <string id="reinforcement_caravan" text="Reinforcement Caravan"/>
        <string id="reinforcement_caravan_trade_disabled" text="These caravans do not trade."/>
    </strings>
</base>